<!DOCTYPE html>
<html>
<head>
  <title>Punch</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
    <body>
        <div id="pgcontainer">
            <div id="pgcontent">
                <%= flash[:notice] %>
                <%= flash[:error]%>
                <% if logged_in? %>
	                <%= link_to "logout", logout_path %>
                    <% end %>
                <%= yield %>
            </div>
        </div>
    </body>
</html>
